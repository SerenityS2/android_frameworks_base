<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:gravity="top"
    android:orientation="horizontal" 
	android:src="@drawable/status_bar_background">

    <TextView
        android:id="@+id/recent_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
		android:layout_weight="1"
        android:text="@string/recent_title_txt"
        android:shadowColor="#40000000"
        android:shadowDx="0"
        android:shadowDy="2"
		android:shadowRadius="5"
        android:textColor="#ff00b4ff"
		android:layout_gravity="center"
		android:gravity="left"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/free_ram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/free_ram" />

    <TextView
        android:id="@+id/total_ram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/total_ram" />

	<ImageView
        android:id="@+id/recents_clear"
        android:clickable="true"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="center"
		android:layout_gravity="center"
		android:src="@drawable/ic_recents_clear"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</LinearLayout>
